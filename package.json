{
  "name": "TamsStatCalculator",
  "version": "1.0.0",
  "description": "Tams Stat Calculator",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.tams.statcalc",
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.5.3"
  },
  "private": true,
  "dependencies": {
    "fs-extra": "^11.3.3"
  }
}
